<%- include('partials/header'); %>


<div id="mainLogin" class="login h-100">
    <% if (locals.errors && locals.errors.login) { %>
        <% locals.errors.login.forEach(function(error) { %>
            <p class="alert alert-primary" role="alert"><%= error %></p>
        <% }) %>
    <% } %>


    <div class="d-flex align-items-center justify-content-center h-100 text-light">
         <div class="rectangle">
            <h3 class="text-center">Welcome to my Chat App!</h3>
            <div class="loginBar h-100">
                <div class="emailInput text-light align-items-left">
                  <form action="/login" method="post">
                    <h5>Email</h5>
                        <input type="email" name="email">
                    <h5>Password</h5>
                        <input type="password" name="password">
                  <button type="submit">Submit</button>
                  </form>
                </div>
            </div>
         </div>
    </div>
</div>
      

<%- include('partials/footer'); %>
