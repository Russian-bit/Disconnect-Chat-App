<%- include('partials/header'); %>


<div id="mainRegister" class="register h-100">
    <% if (locals.errors && locals.errors.register) { %>
        <% locals.errors.register.forEach(function(error) { %>
            <p class="alert alert-primary" role="alert"><%= error %></p>
        <% }) %>
    <% } %>


    <div class="d-flex align-items-center justify-content-center h-100 text-light">
        <form action="/register" method="post">
         <div class="rectangle">
            <h3 class="text-center">Register</h3>
            <div class="registerArea h-100">
                <div class="emailInput text-light align-items-left">
                    <div class="userInput text-light align-items-left">
                        <h5>Username</h5>
                            <input class="form-control mb-2" type="displayName" name="username">
                        <h5>Email</h5>
                            <input class="form-control mb-2" type="email" name="email">
                        <h5>Password</h5>
                            <input class="form-control mb-2" type="password" name="password">
                        <h5>Password Confirm</h5>
                            <input class="form-control mb-2" type="password" name="passwordConfirm">
                            <button type="register" class="btn btn-primary mb-3 mt-2">Register</button>
                    </div>
                </div>
                
                <div>
                    <a href="/" class="text-info mt-3">Login Here</a>
                </div>
                
            </div>
            </div>
         </div>
        </form>
    </div>
</div>


<%- include('partials/footer'); %>
